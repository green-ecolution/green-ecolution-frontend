# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown, JSON, YAML etc.
[*.{md,json,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false  # Allow intentional trailing whitespace in Markdown

# TypeScript / JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = double
max_line_length = 100

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
